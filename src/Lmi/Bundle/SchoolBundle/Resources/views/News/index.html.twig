{% extends 'LmiSchoolBundle::base.html.twig' %}

{% block title %}{{ 'lmi.school.common.news.page_title'|trans }}{% endblock %}

{% block content %}
    <div id="news">
        <h3>{{ 'lmi.school.common.news.title'|trans }}</h3>
        <a href="{{ path('news_new') }}">
            Create a new entry
        </a>

        <ul class="thumbnails">
            {% for entity in entities %}
                <li class="span4">
                    <div class="thumbnail">
                        <div class="caption">
                            <h4>
                                <span class="pull-left">{{ entity.showDate|date('D M, Y') }}</span>
                                <span class="pull-right">{{ entity.title }}</span>
                            </h4>
                        </div>
                        <img src="{{ asset('bundles/lmischool/images/no-image-available.png') }}">
                        <div class="caption">
                            <p>{{ entity.content|truncate(30)|striptags }}</p>
                            <p>
                                <a class="btn btn-primary" href="{{ path('news_show', { 'id': entity.id }) }}">
                                    {{ 'lmi.school.common.news.read_more'|trans }}
                                </a>
                                <a class="btn" href="{{ path('news_edit', { 'id': entity.id }) }}">Править</a>
                            </p>
                        </div>
                    </div>
                </li>
            {% else %}
                <div class="alert alert-info">{{ 'lmi.school.common.no_results'|trans }}</div>
            {% endfor %}
        </ul>
    </div>
{% endblock %}
